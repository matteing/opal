{
  "name": "cli",
  "root": "packages/cli",
  "namedInputs": {
    "source": [
      "{projectRoot}/src/**/*",
      "{projectRoot}/tsconfig.json",
      "{projectRoot}/package.json"
    ]
  },
  "targets": {
    "build": {
      "command": "tsc",
      "options": { "cwd": "packages/cli" },
      "inputs": ["source"],
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["codegen"]
    },
    "dev": {
      "command": "node dist/bin.js",
      "options": { "cwd": "packages/cli" },
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {
      "command": "pnpm lint && pnpm format:check",
      "options": { "cwd": "packages/cli" },
      "inputs": ["source", "{workspaceRoot}/eslint.config.js", "{workspaceRoot}/package.json"]
    },
    "test": {
      "command": "pnpm test",
      "options": { "cwd": "packages/cli" },
      "inputs": ["source"]
    },
    "format": {
      "command": "pnpm lint:fix && pnpm format",
      "options": { "cwd": "packages/cli" },
      "cache": false
    },
    "deps": {
      "command": "pnpm install --frozen-lockfile",
      "options": { "cwd": "." },
      "cache": false
    },
    "codegen": {
      "command": "mix run ../../scripts/codegen_ts.exs",
      "options": { "cwd": "packages/core" },
      "inputs": [
        "{workspaceRoot}/packages/core/lib/**/protocol.*",
        "{workspaceRoot}/scripts/codegen_ts.exs"
      ],
      "outputs": ["{projectRoot}/src/sdk/protocol.ts"],
      "dependsOn": ["core:build"]
    },
    "codegen:check": {
      "command": "mix run ../../scripts/codegen_ts.exs --check",
      "options": { "cwd": "packages/core" },
      "inputs": [
        "{workspaceRoot}/packages/core/lib/**/protocol.*",
        "{workspaceRoot}/scripts/codegen_ts.exs",
        "{projectRoot}/src/sdk/protocol.ts"
      ],
      "dependsOn": ["core:build"]
    },
    "nx-release-publish": {
      "command": "npm publish --access public",
      "options": { "cwd": "packages/cli" },
      "dependsOn": ["build"]
    }
  }
}
