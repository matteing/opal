{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*"],
    "production": [
      "default",
      "!{projectRoot}/**/*.test.*",
      "!{projectRoot}/test/**/*"
    ]
  },
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production"]
    },
    "test": {
      "cache": true,
      "dependsOn": ["build"]
    },
    "lint": {
      "cache": true
    },
    "codegen": {
      "cache": true
    }
  },
  "release": {
    "projects": ["cli"],
    "version": {
      "conventionalCommits": true
    },
    "releaseTag": {
      "pattern": "v{version}"
    },
    "git": {
      "commit": true,
      "tag": true,
      "commitMessage": "chore(release): {version}"
    },
    "changelog": {
      "workspaceChangelog": {
        "file": false,
        "createRelease": "github"
      }
    }
  }
}
