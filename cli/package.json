{
  "name": "@unfinite/opal",
  "version": "0.1.21",
  "description": "AI coding agent â€” CLI & typed client library",
  "license": "MIT",
  "type": "module",
  "bin": {
    "opal": "dist/bin.js"
  },
  "main": "dist/sdk/index.js",
  "types": "dist/sdk/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/sdk/index.js",
      "types": "./dist/sdk/index.d.ts"
    }
  },
  "files": [
    "dist",
    "releases",
    "scripts/postinstall.js"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "postinstall": "node scripts/postinstall.js",
    "start": "node dist/bin.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "cd .. && lefthook install || true"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "printWidth": 100,
    "tabWidth": 2
  },
  "dependencies": {
    "@types/yargs": "^17.0.35",
    "clipboardy": "5.3.0",
    "ink": "^6.8.0",
    "ink-task-list": "^2.0.0",
    "ink-text-input": "^6.0.0",
    "lodash-es": "^4.17.23",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "open": "11.0.0",
    "open-editor": "6.0.0",
    "react": "^19.2.4",
    "yargs": "^18.0.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/lodash-es": "^4.17.12",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "ink-testing-library": "^4.0.0",
    "lefthook": "^2.1.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
